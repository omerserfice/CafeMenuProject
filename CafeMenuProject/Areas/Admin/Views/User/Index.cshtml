@using CafeMenuProject.Models
@model ICollection<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminCafeMenuLayout.cshtml";
}

<div class="container">
    <div class="display-5 text-center my-4">
        User List
    </div>
    <div class="text-end">
        <a class="btn btn-success btn-sm" href="/Admin/User/AddUser">Add User +</a>
    </div>
    <table class="table table-hover shadow">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Name</th>
                <th>Surname</th>
                <th>UserName</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Userid</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Username</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning btn-sm" href="/Admin/User/Edit/@item.Userid">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Admin/User/DeleteUser/@item.Userid">Delete</a>
                        </div>
                    </td>
                </tr>
            }
          
        </tbody>
    </table>
</div>

